@{
}
<section class="innerpage-wrapper">
    <div id="login" class="innerpage-section-padding">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">

                    <div class="flex-content">
                        <div class="custom-form custom-form-fields">
                            <h3>Email verification</h3>
                            <p class="text-success">@ViewBag.succeed</p>
                            <p class="text-danger">@ViewBag.fail</p>
                            @using (Html.BeginForm("ConfirmEmail", "ConfirmEmail", new
                            {
                                verifiCode = ViewBag.verifiCode,
                                name = ViewBag.name,
                                account = ViewBag.account,
                                password = ViewBag.password,
                                email = ViewBag.email,
                                roleID = ViewBag.roleID
                            }, FormMethod.Post))
                            {
                                <div class="form-group">
                                    <input type="text" class="form-control" name="code" placeholder="Enter your code here" required />
                                    <span><i class="fa fa-lock"></i></span>
                                </div>
                                <button class="btn btn-orange btn-block" type="submit" value="Submit">Submit</button>

                            }
                        </div><!-- end custom-form -->
                        <div class="flex-content-img custom-form-img">
                            <img src="~/img/image--ks2.png" class="img-responsive" alt="registration-img" />
                        </div><!-- end custom-form-img -->
                    </div><!-- end form-content -->

                </div><!-- end columns -->
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end login -->
</section><!-- end innerpage-wrapper -->